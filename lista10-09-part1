#include <stdio.h> 
#include <string.h>
#include <ctype.h>

int telefone_valido(char tel[]){
  
    int tamanho = strlen(tel);
    if (tamanho >= 8 && tamanho <= 11){
        return 1;
    }else{
        return 0;
    }
}

